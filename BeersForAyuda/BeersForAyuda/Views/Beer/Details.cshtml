@model BeersForAyuda.Models.Beer

@{
    ViewBag.Title = "Beer";
    Layout = "~/Views/Shared/pages_layout.cshtml";
}

@if (Model == null)
{
    <h3>Beer not found.</h3>
}
else
{

    if (Model.ImgLabels != null)
    {
        <div id="beer-image">
            <img src="@Model.ImgLabels.Medium" />
        </div>
    }

    <div id="beer-details">
        <p>
            @if (Model.Name != null)
            {
                <em>Name:</em>
                <span> @Model.Name</span>
            }

        </p>
        <p>
            @if (Model.Description != null)
            {
                <em>Description:</em>
                @Model.Description
            }

        </p>
        <p>
            @if (Model.IsOrganic == "Y")
            {
                <em>Beer is organic</em>
            }
            else
            {
                <em>Beer is not organic</em>
            }
        </p>
        <p>
            @if (Model.Available != null)
            {
                <em>Availability:</em>
                @Model.Available.Description
            }

        </p>
    </div>
}